<!DOCTYPE html>
<html>
<head>
  <title>Real-Time Products</title>
</head>
<body>
  <h1>Real-Time Products</h1>
  
  <form id="createProductForm">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
    <br>
    <button type="submit">Crear Producto</button>
  </form>

  <ul id="productList">
    {{#each products}}
      <li>{{this.title}} - {{this.description}} - {{this.price}}</li>
    {{/each}}
  </ul>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    document.getElementById("createProductForm").addEventListener("submit", (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const newProduct = {
        title: formData.get("title"),
      };
      socket.emit("createProduct", newProduct);
      e.target.reset();
    });

    socket.on("productChanges", (products) => {
      const productList = document.getElementById("productList");
      productList.innerHTML = "";
      products.forEach((product) => {
        const listItem = document.createElement("li");
        listItem.textContent = `${product.title} - ${product.description} - ${product.price}`;
        productList.appendChild(listItem);
      });
    });
  </script>
</body>
</html>
